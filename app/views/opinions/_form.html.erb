<ul class="nav nav-tabs text-left text-muted user-navbar" id="myTab" role="tablist">
  <li class="nav-item text-left" role="presentation">
    <a class="nav-link text-left active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">REVIEWS</a>
  </li>
  </ul>
<%= form_with(model: @opinion, local: true) do |form| %>
  <div class="p-3 m-3 trix">
    <div class='d-flex align-items-center title-fp'>
    </div>
    <div class='editor-area'>
      <%= form.rich_text_area :body, label: "What is your review feedback?", input_html: {class: "textarea"}, wrapper: false, label_html: {class: "label"}, placeholders: "Compose a new review...", autofocus: true %>
    </div>

    <%= hidden_field_tag(:redirect_url, root_path) %>
    <%= form.button :submit, class: "btn bg-navbar text-light mt-2"   %>
  </div>
<% end %>