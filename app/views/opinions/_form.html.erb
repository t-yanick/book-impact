<%= simple_form_for(@opinion) do | f | %>
  <%= f.error_notification %>
    <div class = "field">
      <div class = "control">
        <%= f.input :feedback, label: "Give a Review about it", input_html: { class: "textarea" }, wrapper: false, label_html: { class: "label"}, placeholder: "Compose a new review...", autofocus: true %>
      </div>
    </div>
    <%= f.button :submit, class: "button is-info" %>
<% end %>
